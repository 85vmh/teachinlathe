#!/usr/bin/make -f

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_test:
	dh_auto_install

	# Create the truetype directory if it doesn't exist
	mkdir -p debian/python3-teachinlathe/usr/share/fonts/truetype/
	# Install the font file
	install -m 644 fonts/BebasKai.ttf debian/python3-teachinlathe/usr/share/fonts/truetype/

	# create icons directory if it doesn't exist
	mkdir -p debian/python3-teachinlathe/usr/share/icons/
	# copy icons from source to icons directory
		

	# create configs directory if it doesn't exist
	mkdir -p debian/python3-teachinlathe/usr/share/configs/
	# Install the config file contents
	cp -r configs debian/python3-teachinlathe/usr/share/

override_dh_install:
	dh_install
	qcompile debian/python3-teachinlathe
